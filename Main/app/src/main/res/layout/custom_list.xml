<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="190dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_toRightOf="@+id/relativeLayout"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로딩중..."
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:text="로딩중..."
            android:textStyle="bold"
            android:textColor="#000000"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:text="로딩중..."
            android:textColor="#000000"
            android:typeface="sans"
            android:layout_toRightOf="@+id/textView7" />


        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_color"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:gravity="left"
            android:text="로딩중..."
            android:textColor="#000000"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_brand"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:gravity="left"
            android:text="로딩중..."
            android:textColor="#000000"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_name"
            android:layout_toRightOf="@+id/txt_name"
            android:text="/"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="색상 : "
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/txt_name" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:text="브랜드 : "
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:text="가격 : "
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/chk_add"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/bt_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/bt_add"
            android:layout_toLeftOf="@+id/txt_eachsize"
            android:layout_toStartOf="@+id/txt_eachsize"
            android:background="@drawable/button_selector"
            android:text="-"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_eachsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_add"
            android:layout_alignBottom="@+id/bt_add"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/bt_add"
            android:layout_toStartOf="@+id/bt_add"
            android:text="0"
            android:textColor="#000000"
            android:textSize="15dp" />


        <Button
            android:id="@+id/bt_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector3"
            android:text="+"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>